
.dropdown {
    @apply shadow p-2 bg-white rounded-sm absolute text-gray-800;
}

.dropdown-menu {
    @apply shadow py-1 bg-white rounded-sm absolute text-gray-800 w-40 right-0;
    & .dropdown-item {
        @apply block p-2 hover:bg-gray-200;
    }

}

.avatar {
    @apply block bg-no-repeat bg-center bg-cover;
}

.stats-bg {
    background-image: url("data:image/png;base64,");
    background-size:auto 80%;
    @apply bg-no-repeat bg-right;
}

.text-link {
    @apply text-blue-900 hover:underline;
}
.text-link-red {
    @apply text-red-900 hover:underline;
}
.text-link-green {
    @apply text-green-900 hover:underline;
}
.text-link-yellow {
    @apply text-yellow-900 hover:underline;
}